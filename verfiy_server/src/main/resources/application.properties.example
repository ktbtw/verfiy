# 应用配置示例
# 作者: ktbtw
# 复制此文件为 application.properties 并修改相应配置

spring.application.name=verfiy
server.port=8084

# 数据库配置
spring.datasource.url=jdbc:mysql://127.0.0.1:3306/verfiy?useSSL=false&serverTimezone=UTC&characterEncoding=utf8&useUnicode=true&rewriteBatchedStatements=true&cachePrepStmts=true&prepStmtCacheSize=250&prepStmtCacheSqlLimit=2048&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=your_password_here
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# HikariCP 连接池优化
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.connection-timeout=3000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000
spring.datasource.hikari.auto-commit=true

# MyBatis 配置
mybatis.configuration.map-underscore-to-camel-case=true
mybatis.mapper-locations=classpath*:mappers/*.xml

# 日志配置
logging.level.org.mybatis=INFO
logging.level.com.xy.verfiy=DEBUG

# H2 控制台（生产环境应禁用）
spring.h2.console.enabled=false
spring.h2.console.path=/h2

# Thymeleaf
spring.thymeleaf.cache=true

# 静态资源缓存
spring.web.resources.cache.period=3600

# SQL 初始化（生产环境应禁用）
spring.sql.init.mode=never

# Context Path
server.servlet.context-path=/verfiy

# SSL 配置（开发环境禁用，生产环境由 Nginx 处理 HTTPS）
server.ssl.enabled=false
# 如果开发时需要启用 HTTPS（不推荐），请配置以下项：
# server.ssl.key-store=classpath:jks/your-certificate.jks
# server.ssl.key-store-type=JKS
# server.ssl.key-store-password=your_jks_password_here

# Session 超时
server.servlet.session.timeout=30m

